<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail"
    android:background="@color/pastel_blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/detail_event"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="@color/dark_blue"
        android:textColor="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:text=" Détails de l'évènement"
            android:textColor="@color/white"
            android:textSize="35dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Club"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_club"
            android:id="@+id/Nom_Event"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Date_et_Heure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_date"
            android:text=" Quand ?"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:id="@+id/Date_et_Heure_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text=" Le 24/11/2022, à 18H"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Localisation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_localisation"
            android:text=" Où aller ?"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:id="@+id/Localisation_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text=" En salle 0260"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Commentaires"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_commentaires"
            android:text=" Commentaires"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:id="@+id/Commentaires_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text=" Cours de chant dans l'amusement !"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Prix"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_prix"
            android:text="Prix"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:id="@+id/Prix_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text=" Activité gratuite !"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/Participation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@color/soft_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_participation"
            android:text=" Je participe"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:layout_gravity="right"
            android:switchMinWidth="60dp"
            android:text="Oui :"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textOff="OFF"
            android:textOn="ON"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/END"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/soft_blue"/>

</LinearLayout>
